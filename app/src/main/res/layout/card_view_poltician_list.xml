<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cardview_poltician_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:backgroundTint="@color/nliveo_white"-->
        <!--app:cardCornerRadius="2dp"-->
        <!--app:cardElevation="3dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView">

                <RelativeLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_label_poltician_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="नाम:"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/textView_poltician_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asascac"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textview_label_poltician_name"
                        android:layout_toEndOf="@+id/textview_label_poltician_name" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/party_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_label_party_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="राजनीतिक पार्टी:"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/textView_poltical_party"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textview_label_party_name"
                        android:layout_toRightOf="@+id/textview_label_party_name"
                        android:text="asascac"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/cardview_dark_background" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/poltician_contact_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/party_name_layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_label_poltician_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="सम्पर्क नम्बर:"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/textView_poltician_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1111111"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textview_label_poltician_contact"
                        android:layout_toEndOf="@+id/textview_label_poltician_contact" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/poltician_election_area_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/poltician_contact_layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_label_poltician_election_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="निर्वाचन क्षेत्र:"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/textView_poltician_election_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/textview_label_poltician_election_area"
                        android:layout_toRightOf="@+id/textview_label_poltician_election_area"
                        android:text="1"
                        android:textColor="@color/cardview_dark_background" />

                </RelativeLayout>


                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/textView8"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:text="Cell No: 9856321556"-->
                <!--android:textColor="#000000" />-->

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/divider_grey"/>
        <!--</android.support.v7.widget.CardView>-->
    </LinearLayout>

</LinearLayout>
