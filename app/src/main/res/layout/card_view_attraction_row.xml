<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp">

        <!--<androidx.cardview.widget.CardView-->
            <!--android:id="@+id/relative"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="match_parent"-->
            <!--card_view:cardElevation="6dp"-->
            <!--card_view:cardCornerRadius="0dp"-->
            <!--card_view:cardBackgroundColor="@color/accent">-->
        <!--</androidx.cardview.widget.CardView>-->
        <!--android:layout_toRightOf="@+id/relative"-->
        <!--android:layout_toEndOf="@+id/relative"-->

        <ImageView

            android:id="@+id/place_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:background="@drawable/transparent_black_gradient_shape"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/place_imageView"
            android:layout_toRightOf="@+id/place_imageView"
            android:layout_toEndOf="@+id/place_imageView"
            android:id="@+id/linearLayout2">

            <TextView
                android:id="@+id/attraction_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:text="News Title"/>

            <TextView
                android:id="@+id/attraction_detail"
                android:textSize="12dp"
                android:textColor="#151515"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detail"/>

        </LinearLayout>

        <TextView
            android:id="@+id/attraction_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bajhang,"
            android:textSize="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#737373"
            android:layout_below="@+id/place_imageView"
            android:layout_toRightOf="@+id/place_imageView"
            android:layout_toEndOf="@+id/place_imageView" />

        <TextView
            android:id="@+id/attraction_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="3dp"
            android:text="Bajhang"
            android:textColor="#737373"
            android:layout_toRightOf="@+id/attraction_dist"
            android:layout_toEndOf="@+id/attraction_dist"
            android:layout_below="@+id/place_imageView"
 />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />

</LinearLayout>
