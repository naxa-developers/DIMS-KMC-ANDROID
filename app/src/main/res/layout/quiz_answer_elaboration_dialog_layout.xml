<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/listItemSecondBG"
    android:padding="@dimen/activity_horizontal_margin">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tv_question_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:text="Question 1/20"
        android:textColor="@color/textColor"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_question_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:text="Correct"
        android:textColor="@color/slate_black"
        android:textSize="@dimen/material_text_title"
        android:textStyle="bold" />


    <!--see question Again-->
    <LinearLayout
        android:id="@+id/questionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:text="Question"
        android:textColor="@color/slate_black"/>

        <TextView
            android:id="@+id/tv_question_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="@string/your_circle_is_empty_LBL"
            android:textColor="@color/textColor"/>

    </LinearLayout>

    <!--see question Elaboration-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <LinearLayout
                android:id="@+id/answerElaborationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:text="Answer Elaboration"
        android:textColor="@color/slate_black"/>

            <TextView
                android:id="@+id/tv_answer_elaboration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="@string/your_circle_is_empty_LBL"
                android:textColor="@color/textColor"
                android:textStyle="bold"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/btn_dialog_see_question"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/isetPurple"
            android:text="See The Question Again"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <Button
            android:layout_marginTop="@dimen/spacing_medium"
            android:id="@+id/btn_dialog_next_question"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/isetPurple"
            android:text="Next Question"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>

    </ScrollView>

</RelativeLayout>