<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/spacing_small">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_grd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        card_view:cardBackgroundColor="@color/nliveo_white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        >

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_video" />

            <TextView
                android:id="@+id/textView_VideoTitle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_thumbnail"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="sdfsdaffsad "
                android:textColor="@color/nliveo_black" />

            <TextView
                android:id="@+id/tv_desc_youtube"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_VideoTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/textView_VideoTitle"
                android:layout_below="@+id/textView_VideoTitle"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="Desc" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/img_thumbnail"
                android:layout_alignRight="@+id/img_thumbnail"
                android:layout_centerVertical="true"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                android:background="@drawable/ic_play_icon" />


            <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:id="@+id/fab"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:src="@drawable/ic_play"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignRight="@+id/img_thumbnail"-->
            <!--android:layout_alignEnd="@+id/img_thumbnail"-->
            <!--android:layout_marginRight="44dp"-->
            <!--android:layout_marginEnd="44dp" />-->


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>