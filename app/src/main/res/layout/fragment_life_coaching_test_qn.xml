<!--question no.3-->
<RelativeLayout
    android:id="@+id/relativeLayout_3"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"

    >

    <TextView
        android:id="@+id/spinner_fragment_question_lbl"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="@dimen/default_padding"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:textColor="@color/black"
        android:textSize="@dimen/material_text_headline"
        android:text="Life Coaching Test Question"/>



    <!--victim radio button input layout-->
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radio_yes_life_coaching_test"
            style="@style/radionbuttonMaChupBasdina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/default_padding"
            android:text="Yes"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/material_text_subhead"
            android:layout_marginLeft="@dimen/spacing_xxlarge"/>

        <RadioButton
            android:id="@+id/radio_no_life_coaching_test"
            style="@style/radionbuttonMaChupBasdina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/default_padding"
            android:text="No"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/material_text_subhead"
            android:layout_marginRight="@dimen/spacing_xxlarge"/>
        <!--android:onClick="onRadioButtonClicked"-->


    </RadioGroup>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/isetPurple"
                android:text="A"
                android:textSize="@dimen/material_text_headline"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/answer_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textColorPurple"
                android:textSize="@dimen/material_text_caption"
                android:textStyle="bold"
                android:text="Option 1"
                android:background="@color/transparent"
                android:drawableTint="@color/isetPurple"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_card1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/isetPurple"
                android:text="B"
                android:textSize="@dimen/material_text_headline"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/answer_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textColorPurple"
                android:textSize="@dimen/material_text_caption"
                android:textStyle="bold"
                android:text="Option 2"
                android:background="@color/transparent"
                android:drawableTint="@color/isetPurple"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_card2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/isetPurple"
                android:text="C"
                android:textSize="@dimen/material_text_headline"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/answer_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textColorPurple"
                android:textSize="@dimen/material_text_caption"
                android:textStyle="bold"
                android:text="Option 3"
                android:background="@color/transparent"
                android:drawableTint="@color/isetPurple"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_card3"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/isetPurple"
                android:text="D"
                android:textSize="@dimen/material_text_headline"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/answer_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/textColorPurple"
                android:textSize="@dimen/material_text_caption"
                android:textStyle="bold"
                android:text="Option 4"
                android:background="@color/transparent"
                android:drawableTint="@color/isetPurple"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>



</RelativeLayout>



